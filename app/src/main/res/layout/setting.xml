<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/musiqueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="92dp"
        android:text="@string/musiqueLabel"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonSoundOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:onClick="stop_music"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/musiqueLabel"
        app:layout_constraintStart_toEndOf="@id/musiqueLabel"
        app:layout_constraintTop_toTopOf="@id/musiqueLabel"
        app:srcCompat="@drawable/sound_on"
        android:contentDescription="@string/soundicon" />

    <ImageButton
        android:id="@+id/imageButtonSoundOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:onClick="play_music"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/musiqueLabel"
        app:layout_constraintStart_toEndOf="@id/musiqueLabel"
        app:layout_constraintTop_toTopOf="@id/musiqueLabel"
        app:srcCompat="@drawable/sound_off"
        android:contentDescription="@string/soundicon" />

    <Button
        android:id="@+id/reset_data"
        android:layout_width="285dp"
        android:layout_height="73dp"
        android:background="@drawable/white_round_button"
        android:text="@string/button_reset"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="341dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:onClick="goto_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/back_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>