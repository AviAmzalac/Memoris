        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_12"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_10"
        app:layout_constraintTop_toTopOf="@+id/text_11"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_13"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_11"
        app:layout_constraintTop_toBottomOf="@+id/text_11"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_14"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_10"
        app:layout_constraintTop_toBottomOf="@+id/text_12"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/max_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/sfas"
        android:onClick="push_button"
        android:text="/3"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="334dp" />

    <TextView
        android:id="@+id/error_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfas"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/max_count"
        app:layout_constraintEnd_toStartOf="@+id/max_count" />

    <TextView
        android:id="@+id/help"
        android:layout_width="43dp"
        android:layout_height="65dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/lock"
        android:gravity="center"
        android:onClick="indice_toast"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/max_count"
        app:layout_constraintEnd_toEndOf="parent" />


