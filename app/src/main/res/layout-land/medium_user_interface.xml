<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jeu">


    <TextView
        android:id="@+id/text_1"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/error_counter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        android:layout_marginLeft="70dp"
        app:layout_constraintStart_toEndOf="@+id/max_count"
        app:layout_constraintTop_toTopOf="@+id/text_1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_1"
        app:layout_constraintTop_toBottomOf="@+id/text_1" />

    <TextView
        android:id="@+id/text_4"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_2"
        app:layout_constraintTop_toTopOf="@+id/text_3" />

    <TextView
        android:id="@+id/text_5"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_3"
        app:layout_constraintTop_toBottomOf="@+id/text_3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_6"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_4"
        app:layout_constraintTop_toTopOf="@+id/text_5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_7"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_5"
        app:layout_constraintTop_toBottomOf="@+id/text_5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_8"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_6"
        app:layout_constraintTop_toTopOf="@+id/text_7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_9"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_7"
        app:layout_constraintTop_toBottomOf="@+id/text_7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_10"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_8"
        app:layout_constraintTop_toTopOf="@+id/text_9"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_11"
