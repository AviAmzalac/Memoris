<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jeu">

    <ImageButton
        android:id="@+id/imageButtonHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:onClick="indice_toast"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/lock" />


    <TextView
        android:id="@+id/text_1"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_1"
        app:layout_constraintTop_toTopOf="@+id/text_1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_1"
        app:layout_constraintTop_toBottomOf="@+id/text_1" />

    <TextView
        android:id="@+id/text_4"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_2"
        app:layout_constraintTop_toTopOf="@+id/text_3" />

    <TextView
        android:id="@+id/text_5"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_3"
        app:layout_constraintTop_toBottomOf="@+id/text_3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_6"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_4"
        app:layout_constraintTop_toTopOf="@+id/text_5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_7"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_5"
        app:layout_constraintTop_toBottomOf="@+id/text_5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_8"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_6"
        app:layout_constraintTop_toTopOf="@+id/text_7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_9"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_7"
        app:layout_constraintTop_toBottomOf="@+id/text_7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_10"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_8"
        app:layout_constraintTop_toTopOf="@+id/text_9"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_11"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_9"
        app:layout_constraintTop_toBottomOf="@+id/text_9"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_12"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:background="@drawable/cadre"
        android:fontFamily="@font/sfas"
        android:gravity="center"
        android:onClick="push_button"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/text_10"
        app:layout_constraintTop_toTopOf="@+id/text_11"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/max_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/sfas"
        android:onClick="push_button"
        android:text="/3"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/error_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/sfas"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/max_count" />


</androidx.constraintlayout.widget.ConstraintLayout>