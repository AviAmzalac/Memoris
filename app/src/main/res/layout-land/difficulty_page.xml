<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_button">


    <Button
        android:id="@+id/button_easy"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/green_round_button"
        android:fontFamily="@font/sfas"
        android:onClick="goto_timer_page"
        android:text="@string/button_easy"
        android:textSize="46sp"
        app:layout_constraintBottom_toTopOf="@+id/invisible_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_medium"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:background="@drawable/yellow_round_button"
        android:fontFamily="@font/sfas"
        android:text="@string/button_medium"
        android:textSize="46sp"
        app:layout_constraintBottom_toTopOf="@+id/invisible_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_hard"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:background="@drawable/red_round_button"
        android:fontFamily="@font/sfas"
        android:text="@string/button_hard"
        android:textSize="46sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invisible_center" />

    <Button
        android:id="@+id/button_neightmare"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/dark_round_button"
        android:fontFamily="@font/sfas"
        android:text="@string/button_competitive"
        android:textSize="46sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invisible_center" />

    <TextView
        android:id="@+id/invisible_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>